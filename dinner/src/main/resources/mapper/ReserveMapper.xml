<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dinner.dao.reserve.ReserveDao">

    <!--查询预订列表-->
    <select id="reserveList" resultType="map">
        select RE_NUMBER from TAB_RESERVE where to_char(sysdate,'yyyy-mm-dd')=to_char(RE_DATE,'yyyy-mm-dd')
    </select>

    <!--增加预定记录-->
    <insert id="addReserve" parameterType="map">
        insert into TAB_RESERVE
        values(SEQ_TAB_RESERVE_ID.nextval,#{name},#{email},#{phone},#{number},to_date(#{date},'yyyy-mm-dd'),#{message})
    </insert>

    <!--改变桌子状态-->
    <update id="updateState" parameterType="map">
        update TAB_TABLE set TAB_STATE=2 where TAB_ID=#{number}
    </update>
</mapper>